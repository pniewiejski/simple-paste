{
  "extends": [
    "airbnb-base/legacy",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "no-use-before-define": [2, { "functions": false }],
    "no-unused-vars": ["error", { "vars": "all", "args": "none", "ignoreRestSiblings": true }],
    "no-underscore-dangle": 0,
    "no-console": 0,
    "no-param-reassign": [2, { "props": false }],
    "prettier/prettier": ["error", {
      "semi": false,
      "singleQuote": true,
      "trailingComma": "all",
      "bracketSpacing": false
    }]
  },
  "env": {
    "mocha": true,
    "es6": true,
    "node": true
  }
}
